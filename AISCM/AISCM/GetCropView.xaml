<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Selected Crops"
             x:Class="AISCM.GetCropView">
    <ContentPage.Content>
        <ScrollView>
        <ListView  x:Name="lstView">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout Orientation="Horizontal" HorizontalOptions="Fill" BackgroundColor="White" Padding="13">
                            <StackLayout Orientation="Vertical">
                                <Label Text = "{Binding CropName}" FontSize="20"/>
                            </StackLayout>

                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>