<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Recommended Crops"
             x:Class="AISCM.GetApproxQuantityCropPredict">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Enter Approx Production Quantity" FontAttributes="Bold" FontSize="20"/>
            <Entry x:Name="Quant" Placeholder="Enter Approx Production"/>
            <Button Text="Take This Crop" x:Name="bid" Clicked="addCrop" HorizontalOptions="Center" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>