<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            Title="Marketing"
             x:Class="AISCM.CropMarketView"
              xmlns:local="clr-namespace:AISCM">
    <ContentPage.Content>
        <Grid BackgroundColor="#EEEEEE" Padding="20">
            <Grid.RowDefinitions>

                <RowDefinition Height="10*"/>
                <RowDefinition Height="10*"/>
                <RowDefinition Height="80*"/>

            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="80*"/>
            </Grid.ColumnDefinitions>


            <Button Clicked="OnAcceptBidsClicked" BackgroundColor="White" Text="View And Accept New Bids" Grid.Row="0" Grid.Column="0" />
            <Button Clicked="OnViewAcceptedClicked" BackgroundColor="White" Text="View Accepted Bids" Grid.Row="1" Grid.Column="0" />


        </Grid>
    </ContentPage.Content>
</ContentPage>